---
layout: base.njk
pagination:
  data: collections.posts
  size: 1
  alias: post
permalink: /posts/{{ post.fileSlug }}/
---

<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ post.data.title }}</h1>
    <div class="post-meta">
      {% if post.data.author %}
        <span class="post-author">By {{ post.data.author }}</span>
      {% endif %}
      {% if post.data.date %}
        <time class="post-date" datetime="{{ post.data.date | date: '%Y-%m-%d' }}">
          {{ post.data.date | date: "%B %d, %Y" }}
        </time>
      {% endif %}
    </div>
  </header>

  <div class="post-content">
    {{ post.templateContent | safe }}
  </div>

  <footer class="post-footer">
    <nav class="post-navigation">
      {% if pagination.href.previous %}
        <a href="{{ pagination.href.previous }}" class="prev-post">← Previous Post</a>
      {% endif %}
      {% if pagination.href.next %}
        <a href="{{ pagination.href.next }}" class="next-post">Next Post →</a>
      {% endif %}
    </nav>
    <a href="/" class="back-home">← Back to Home</a>
  </footer>
</article>
